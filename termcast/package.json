{
  "name": "termcast",
  "version": "1.3.22",
  "description": "Raycast for the terminal",
  "repository": "https://github.com/remorses/termcast",
  "scripts": {
    "build": "tsc && bun run binary",
    "prepublishOnly": "tsc",
    "release": "cd .. && bun changeset version && /Users/morse/Documents/GitHub/changesets/packages/cli/bin.js publish # my own fork to support github releases",
    "binary": "bun build ./src/cli.tsx --env-file=\"\" --compile --outfile bin",
    "see-raycast-types": "zed node_modules/@raycast/api/types/index.d.ts",
    "play": "bun src/cli.tsx",
    "test": "bun test && bun e2e",
    "e2e": "vitest"
  },
  "exports": {
    ".": {
      "development": "./src/index.tsx",
      "types": "./src/index.d.ts",
      "default": "./dist/index.js"
    },
    "./src/*": "./src/*.tsx"
  },
  "files": [
    "dist",
    "src",
    "esm"
  ],
  "keywords": [],
  "author": "Tommaso De Rossi, morse <beats.by.morse@gmail.com>",
  "license": "",
  "dependencies": {
    "@opentui/core": "0.1.61",
    "@opentui/react": "0.1.61",
    "@parcel/watcher": "^2.5.1",
    "@tanstack/react-query": "^5.85.5",
    "@tanstack/react-query-persist-client": "^5.85.5",
    "cac": "^6.7.14",
    "change-case": "^5.4.4",
    "cheerio": "^1.1.2",
    "google-auth-library": "^10.3.0",
    "jszip": "^3.10.1",
    "nanoid": "^5.1.5",
    "node-pty": "^1.0.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-hook-form": "^7.62.0",
    "string-dedent": "^3.0.2",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "tuistory": "workspace:*",
    "@types/bun": "^1.3.5",
    "@types/node": "^25.0.3",
    "@raycast/api": "^1.102.5",
    "@raycast/utils": "^2.2.1",
    "@xterm/addon-serialize": "^0.13.0",
    "@xterm/headless": "^5.5.0",
    "bun-pty": "^0.4.2",
    "vitest": "^4.0.16"
  }
}
