{
    "name": "@termcast/cli",
    "version": "0.0.2",
    "description": "Raycast for the terminal",
    "bin": {
        "termcast": "src/cli.tsx"
    },
    "repository": "https://github.com/remorses/termcast",
    "scripts": {
        "build": "tsc && bun run binary",
        "binary": "bun build ./src/cli.tsx --compile --outfile bin ",
        "see-raycast-types": "zed node_modules/@raycast/api/types/index.d.ts",
        "play": "bun src/cli.tsx",
        "test": "vitest --run"
    },
    "exports": {
        ".": {
            "default": "./src/index.tsx"
        },
        "./src/*": "./src/*.tsx"
    },
    "files": [
        "dist",
        "src",
        "esm"
    ],
    "keywords": [],
    "author": "Tommaso De Rossi, morse <beats.by.morse@gmail.com>",
    "license": "",
    "dependencies": {
        "@opentui/core": "^0.1.12",
        "@opentui/react": "^0.1.12",
        "@raycast/api": "^1.102.5",
        "@raycast/utils": "^2.2.1",
        "@signalapp/sqlcipher": "^2.4.4",
        "@tanstack/react-query": "^5.85.5",
        "@tanstack/react-query-persist-client": "^5.85.5",
        "cac": "^6.7.14",
        "change-case": "^5.4.4",
        "chokidar": "^4.0.3",
        "dedent": "^1.6.0",
        "jszip": "^3.10.1",
        "react": "^19.1.1",
        "react-hook-form": "^7.62.0",
        "zustand": "^5.0.8"
    },
    "devDependencies": {
        "@types/bun": "^1.2.21",
        "@types/node": "^24.3.0",
        "@vitest/ui": "^3.2.4",
        "vitest": "^3.2.4"
    }
}
